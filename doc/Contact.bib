	month = apr,
	year = {2019},
	note = {Publisher: Public Library of Science},
	keywords = {Wildlife, Animal sociality, Cheetahs, Collective animal behavior, Kenya, Normal distribution, Population dynamics, Species interactions},
	pages = {e0213910},
